
{
  "compilerOptions": {
    "allowJs": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": false,
    "target": "esnext"
  },
  "exclude": [
    "node_modules",
    ".babelrc",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src",
    "storybook"
  ]
}